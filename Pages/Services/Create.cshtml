@page
@model PetPals.Pages.Services.CreateModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Add Service";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<h4 id="profileheader">Add Your Service</h4>
<hr />
<div class="row" id="textcolour">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.ServiceType" class="control-label"></label>
                <select asp-for="Service.ServiceType" class="form-control">
                    <option value="">-- Select Service --</option>
                    <option value="Bath & Grooming">Bath & Grooming</option>
                    <option value="Walking & Exercise">Walk & Exercise</option>
                    <option value="House Visit">House Visit/Feeding</option>
                    <option value="Overnight Stay">Overnight Stay</option>
                    <option value="Medicine Service">Medicine Service</option>
                </select>
                <span asp-validation-for="Service.ServiceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Price" class="control-label"></label>
                <select asp-for="Service.Price" class="form-control">
                    <option value="10">£10</option>
                    <option value="15">£15</option>
                    <option value="20">£20</option>
                    <option value="25">£25</option>
                    <option value="30">£30</option>
                </select>
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Service.SitterID" class="form-control"  value="@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeySitterID)" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" id="button"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" id="profileheader" asp-route-id=@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeySitterID)>Services</a>
</div>
<div>
    <a asp-page="../Sitters/Index" id="profileheader" asp-route-id=@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeySitterID)>Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
