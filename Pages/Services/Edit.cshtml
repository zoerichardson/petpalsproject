@page
@model PetPals.Pages.Services.EditModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<h4 id="profileheader">Update Your Service</h4>
<hr />
<div class="row" id="textcolour">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.ServiceID" />
            <div class="form-group">
                <input asp-for="Service.ServiceType" class="form-control" readonly="@(true)" />
                <span asp-validation-for="Service.ServiceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Price" class="control-label"></label>
                <select asp-for="Service.Price" class="form-control">
                    <option value="10">£10</option>
                    <option value="15">£15</option>
                    <option value="20">£20</option>
                    <option value="25">£25</option>
                    <option value="30">£30</option>
                </select>
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Service.SitterID" class="form-control" asp-items="ViewBag.SitterID" readonly="@(true)" />
                <span asp-validation-for="Service.SitterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" id="button"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" id="profileheader" asp-route-id=@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeySitterID)>View your Services</a>
</div>
<div>
    <a asp-page="../Sitters/Index" id="profileheader" asp-route-id=@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeySitterID)>View your Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
