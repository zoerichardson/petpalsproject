@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>


<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/picture1.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                </div>
            </div>
            <div class="item">
                <img src="~/images/picture2.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                </div>
            </div>
            <div class="item">
                <img src="~/images/picture3.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">
        <div id="howitworks" style="text-align:center">
            <h1>Welcome</h1>
            <h3><strong>How it works</strong></h3>
            <p>Find and book a sitter</p>
            <p>Create an account to make a booking</p>
            <p>Enter your city and provide the date that want and you'll be connected with some pet sitters</p>
            <p>Each sitter has their own profile page were you can view their services, experince and skills</p>


        </div>
    </div>

    </body>
</html>


