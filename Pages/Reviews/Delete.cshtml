@page
@model PetPals.Pages.Reviews.DeleteModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css">
<h2 id="profileheader">Delete</h2>

<h3 id="profileheader">Are you sure you want to delete this?</h3>
<div>
    <h4 id="profileheader">Review</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Review.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Review.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Review.Sitter)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Review.Sitter.FirstName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Review.ReviewID" />
        <input type="submit" value="Delete" class="btn btn-default" id="button"/> |
        <a asp-page="./Index" id="profileheader" asp-route-id=@HttpContext.Session.GetString(PetPals.Areas.Identity.Pages.Account.LoginModel.SessionKeyCustomerID)>Profile</a>
    </form>
</div>
