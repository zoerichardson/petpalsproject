@page
@model PetPals.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Book";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="row" style="text-align:center">
    <form method="post" style="text-align:center" id="searchoptions">
        <h4 id="profileheader">Browse for sitters and services</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <select asp-for="Input.SelectedService" class="form-control" required>
                <option value="">-- Select Service --</option>
                <option value="Bath & Grooming">Bath & Grooming</option>
                <option value="Walking & Exercise">Walk & Exercise</option>
                <option value="House Visit">House Visit/Feeding</option>
                <option value="Overnight Stay">Overnight Stay</option>
                <option value="Medicine Service">Medicine Service</option>
            </select>
            <span asp-validation-for="Input.SelectedService"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="start">Enter your location</label>
            <input asp-for="Input.SelectedLocation" id="location" class="form-control" required>
            <span asp-validation-for="Input.SelectedLocation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="start">Select Date From Calender:</label>
            <input asp-for="Input.SelectedDate" type="date"
                 max="2029-12-31"  class="form-control" id="datePicker" required>
            <span class="validity"></span>
        </div>
        <div class="form-group">
            <label for="start">Select Time:</label>
            <input asp-for="Input.SelectedTime" type="time"
                   value="09:00"
                   min="09:00" max="22:00" class="form-control">
            <span class="validity"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-default" id="button" />
        </div>
    </form>
</div>


<script>
    document.getElementById('datePicker').value = new Date().toDateInputValue();

</script>